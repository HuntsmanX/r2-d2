.row
  .large-4.columns
    .row.hash
      .key Username / Service
      .value = @username
    .row.hash
      .key Pages
      .value = @pages_count
  .large-3.columns
    .row.hash
      .key Created at
      .value = @created_at_formatted
    .row.hash
      .key Last Updated at
      .value = @updated_at_formatted
  .large-3.columns
    .row.hash
      .key Created by
      .value = @created_by
    - if @edited_by
      .row.hash
        .key: span class="label alert" Currently Edited
        .value = 'by ' + @edited_by
  .large-2.columns
    .button-group.tiny.float-right
      a.button.primary.show-report
        icon.fi-magnifying-glass
        |  Show
